<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.wangjie.rapidrouter.example.activity.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"/>

    <Button
            android:id="@+id/activity_main_to_a_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="to Activity A"
            />

    <Button
            android:id="@+id/activity_main_to_b_error_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="to Activity B [not found]"
            />

    <Button
            android:id="@+id/activity_main_to_c_intercept_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="to Activity C [not found]"
            />
    <Button
            android:id="@+id/activity_main_to_c_not_found_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="to Activity C [error]"
            />
</LinearLayout>
